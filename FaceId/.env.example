# FacePass AiService — Environment Variables
# Copy this file to .env and fill in your values.

# ── Database ────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/facepass
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ── Model ───────────────────────────────────────────────────────────────────
MODEL_DIR=models
MODEL_VERSION=v1
MODEL_NAME=yolo_face.pt
ARCFACE_MODEL=buffalo_l

# ── Inference ───────────────────────────────────────────────────────────────
DEVICE=cuda        # cuda | cpu
DETECTION_CONF_THRESHOLD=0.5
DETECTION_INPUT_SIZE=640

# ── Recognition ─────────────────────────────────────────────────────────────
EMBED_INTERVAL=15
SIM_THRESHOLD=0.45

# ── Behaviour ────────────────────────────────────────────────────────────────
YAW_THRESHOLD=20.0
PITCH_THRESHOLD=-10.0

# ── Server ──────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
LOG_FILE=logs/facepass.log

# ── Scaling (optional) ───────────────────────────────────────────────────────
# REDIS_URL=redis://localhost:6379/0
